<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vchao.examine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="top.vchao.examine.activity.MainActivity"></activity>
        <activity android:name="top.vchao.examine.activity.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="top.vchao.examine.activity.LoginActivity"
            android:theme="@style/AppTheme.Dark"></activity>
        <activity android:name="top.vchao.examine.activity.SignupActivity"
            android:theme="@style/AppTheme.Dark"></activity>
        <activity android:name="top.vchao.examine.activity.AnswerActivity"></activity>

    </application>

</manifest>